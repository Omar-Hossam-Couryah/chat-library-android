<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainChatActivity">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/standard_margin">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="22dp"
            android:background="@android:color/transparent"
            android:padding="@dimen/standard_margin"
            android:src="@drawable/back" />

        <ImageButton
            android:id="@+id/invisible_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="22dp"
            android:background="@android:color/transparent"
            android:padding="@dimen/standard_margin"
            android:src="@drawable/back"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/screen_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@id/invisible_button"
            android:layout_toEndOf="@id/back_button"
            android:gravity="center"
            android:textColor="#242424"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Order No #212121" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/send_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/standard_margin">

        <EditText
            android:id="@+id/send_edit_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/image_button"
            android:background="@drawable/rounded_edit_text"
            android:hint="Enter Message Here"
            android:padding="@dimen/standard_margin" />

        <ImageButton
            android:id="@+id/send_button"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/primary_circle"
            android:padding="@dimen/standard_margin"
            android:src="@drawable/send" />

        <ImageButton
            android:id="@+id/image_button"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/send_button"
            android:background="@android:color/transparent"
            android:foregroundTint="#F36D2A"
            android:padding="@dimen/standard_margin"
            android:src="@drawable/baseline_image_black_24" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/send_container"
        android:layout_below="@id/top_bar"
        android:background="#F2F2F2">

        <LinearLayout
            android:id="@+id/no_chat_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/no_chat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/double_margin"
                android:text="@string/how_can_i_help_you"
                android:textColor="#979797"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chat_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/standard_margin"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:stackFromEnd="true" />
    </RelativeLayout>

</RelativeLayout>